<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.screens.calc.Calk">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvDepoSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin"
                android:fontFamily="@font/medium"
                android:text="@string/depo_sum"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_depoSum"
                style="CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin"
                app:boxStrokeColor="@color/box_stroke_color_selector"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tvDepoSum">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_depoSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:inputType="number"

                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvPersent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_margin"
                android:layout_marginTop="@dimen/main_margin"
                android:fontFamily="@font/medium"
                android:text="Ставка"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_depoSum" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin"
                android:layout_marginStart="@dimen/main_margin"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPersent"
                app:layout_constraintWidth_percent="0.4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/bold"
                android:text="%"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/til_percent"
                app:layout_constraintStart_toEndOf="@id/til_percent"
                app:layout_constraintTop_toTopOf="@id/til_percent" />


            <TextView
                android:id="@+id/tvAdding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin"
                android:layout_marginEnd="@dimen/main_margin"
                android:fontFamily="@font/medium"
                android:text="Пополнение"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_depoSum" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/swit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="@id/tvAdding"
                app:layout_constraintStart_toStartOf="@id/tvAdding"
                app:layout_constraintTop_toBottomOf="@id/tvAdding"
                app:thumbTint="@color/thumb_color_selector"
                app:trackTint="@color/track_color_selector" />

            <TextView
                android:id="@+id/tvAddSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin"
                android:fontFamily="@font/medium"
                android:text="Сумма пополнения"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_percent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_addSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tvAddSum">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_addSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_margin"
                android:layout_marginTop="@dimen/main_margin"
                android:fontFamily="@font/medium"
                android:text="Срок, мес"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_addSum" />


            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin"
                android:stepSize="1"
                android:valueFrom="1.0"
                android:valueTo="60.0"
                app:layout_constraintTop_toBottomOf="@id/tvTerm"
                app:thumbColor="@color/dark_green"
                app:tickVisible="false"
                app:trackColorActive="@color/light_green"
                app:trackColorInactive="@color/light_grayish_blue" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/main_margin"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_margin"
                android:fontFamily="@font/medium"
                android:text="Сумма по окончанию"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTotalSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/bold"
                android:text="Сумма"
                android:textColor="@color/light_green"
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@id/btnBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvtotal" />


            <Button
                android:id="@+id/btnBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Рассчитать"
                android:textAllCaps="true"
                android:fontFamily="@font/bold"
                android:textSize="24sp"
                android:backgroundTint="@color/dark_green"
                android:layout_marginHorizontal="@dimen/main_margin"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/main_margin"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>